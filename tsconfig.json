{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["es2017", "es2019"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strict": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist/",
    "target": "es2019",
    "sourceMap": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["**/*.ts"]
}
